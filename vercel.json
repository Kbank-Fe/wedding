{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/[shareId].ts": {
      "runtime": "edge"
    }
  },
  "rewrites": [
    {
      "source": "/(admin|404|api)(?:/.*)?$",
      "destination": "/index.html"
    },
    {
      "source": "/.*\\.(js|css|png|jpg|jpeg|svg|ico|txt|webmanifest|json)$",
      "destination": "/$1"
    },
    {
      "source": "^/([^/.]+)$",
      "destination": "/api/$1.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
